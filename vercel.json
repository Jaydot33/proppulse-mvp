{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "main.py": {
      "runtime": "python3.12-fluid",  // NEW: Fluid Compute for Python (Q4 2025)
      "maxDuration": 30,  // 30s for cold ML loads (Pro default 10s)
      "memory": 2048      // 2GB for torch (Pro allows 4GB)
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard"
    }
  ]
}
